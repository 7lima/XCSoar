#
# TAKEOFF/LANDING
#
#	- Automatically start/stop logger
#

mode=default
type=gce
data=TAKEOFF
event=PlaySound \Storage\Magic.wav
event=StatusMessage TAKEOFF\r\nLog Started
event=Logger start

mode=default
type=gce
data=LANDING
event=Analysis
event=PlaySound \Storage\Magic.wav
event=StatusMessage LANDING\r\nLog Stopped
event=Logger stop


