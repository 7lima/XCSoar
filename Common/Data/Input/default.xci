type=gce
data=COMMPORT_RESTART
event=StatusMessage Restarting Comm Ports
title=Waiting for COMM Port

mode=default
type=gce
data=GPS_FIX_WAIT
event=StatusMessage Waiting for GPS Fix
title=Waiting for GPS Fix

mode=default
type=gce
data=STARTUP_SIMULATOR
event=StatusMessage Simulation\r\nNothing is real!
event=PlaySound \My Documents\XCSoarData\Start_Simulator.wav
title=The simulator has started

mode=default
type=gce
data=STARTUP_REAL
event=StatusMessage Maintain effective\r\nLOOKOUT at all times
event=PlaySound \My Documents\XCSoarData\Start_Real.wav
title=The real XCS has started

mode=default
type=gce
data=TAKEOFF
event=StatusMessage Takeoff
event=PlaySound \My Documents\XCSoarData\Takeoff.wav
title=Takeoff
note=This event could be useful for automatically starting the logger.

mode=default
type=gce
data=LANDING
event=StatusMessage Landing
event=PlaySound \My Documents\XCSoarData\Landing.wav
title=Landing

mode=default
type=gce
data=FLIGHTMODE_FINALGLIDE_ABOVE
event=PlaySound \My Documents\XCSoarData\FinalGlide.wav
event=StatusMessage Above Final Glide

mode=default
type=gce
data=FLIGHTMODE_FINALGLIDE_BELOW
event=PlaySound \My Documents\XCSoarData\Tiptoe.wav
event=StatusMessage Marginal Final Glide

